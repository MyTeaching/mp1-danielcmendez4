<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="parent"
    android:layout_height="parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="parent"
        android:layout_height="parent"
        android:layout_margin="16dp">

        <TableRow>

            <TextView
                android:layout_height="parent"
                android:padding="8dp"
                android:text="Bill_total"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/bill"
                android:layout_span="3"
                android:inputType="number|numberDecimal"
                android:padding="8dp"
                android:text="0.0"
                android:textSize="24sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="8dp"
                android:text=""
                android:textSize="24sp" />

            <TextView
                android:padding="8dp"
                android:text="10%"
                android:textSize="24sp" />

            <TextView
                android:padding="8dp"
                android:text="15%"
                android:textSize="24sp" />

            <TextView
                android:padding="8dp"
                android:text="20%"
                android:textSize="24sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="Tip"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tip1"
                android:padding="8dp"
                android:text="0.0"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tip2"
                android:padding="8dp"
                android:text="0.0"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tip3"
                android:padding="8dp"
                android:text="0.0"
                android:textSize="24sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="Total"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/total1"
                android:padding="8dp"
                android:text="0.0"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/total2"
                android:padding="8dp"
                android:text="0.0"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/total3"
                android:padding="8dp"
                android:text="0.0"
                android:textSize="24sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="Custom"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_span="2"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/seekval"
                android:padding="8dp"
                android:text="0%"
                android:textSize="24sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="Tip"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tipx"
                android:padding="8dp"
                android:text="0.0"
                android:textSize="24sp" />

            <TextView
                android:padding="8dp"
                android:text="Total"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/totalx"
                android:padding="8dp"
                android:text="0.0"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>